<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/review_item_border">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/review_writer_imageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/mypage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/review_writer_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="horseesroh"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/review_date_txtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2020.07.09"
                    android:textColor="#000000"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
        // TODO : image slicing, show popup image

        <ImageView
            android:id="@+id/review_imgView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/review_textview_border"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_upload" />

        <TextView
            android:id="@+id/review_score_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="★4.5"
            android:textSize="16dp" />

        <TextView
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정말 맛있어요!"
            android:id="@+id/review_text_txtView"
            android:paddingBottom="2dp"
            android:layout_weight="1"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>