<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_border">

    <ImageView
        android:id="@+id/menu_imgView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/no_image_box"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="떡볶이"
            android:id="@+id/menu_name_txtView"
            android:textSize="24dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:id="@+id/menu_price_txtView"
            android:textSize="16dp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#JMT #순대 #오뎅과 함께 먹는 것을 추천하는"
            android:id="@+id/menu_desc_txtView"
            android:textSize="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#666666" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★"
                android:textColor="#FFC107"
                android:gravity="left"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:layout_toRightOf="@+id/star"
                android:id="@+id/menu_score_txtView"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/menu_orderCount_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="주문 횟수 : 50"
                android:textColor="#787878"
                android:textSize="16dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>